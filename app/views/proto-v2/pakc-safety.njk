{% extends "layout_pf.html" %}

{% block pageTitle %}
    Risk management - Physical abuse of a known child
{% endblock %}

{% block content %}
    {{ govukBackLink({
        text: "Back",
        href: "pakc-supervision"
    }) }}
    {% include "includes/offender-details.njk" %}
    <div class="govuk-hint" style="margin-bottom:5px">Risk management</div>
    <h1 class="govuk-heading-l">Physical abuse of a known child</h1>
    {% include "includes/user-guide.njk" %}

    {{ govukTable({
        firstCellIsHeader: false,
        head: [
            {
                text: "Who is at risk"
            },
            {
                text: "Problem category"
            },
            {
                text: "Timeframe"
            },
            {
                text: "Imminence"
            },
            {
                text: "Likelihood"
            },
            {
                text: "Linked with"
            }
        ],
        rows: [
            [
                {
                    text: "Known child"
                },
                {
                    text: "Significant"
                },
                {
                    text: "Current"
                },
                {
                    text: "Weeks"
                },
                {
                    text: "High"
                },
                {
                    text: "Violent behaviour related to alcohol"
                }

            ]
        ]
    }) }}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form action="/pakc-safety" method="post" novalidate>


                <h2 class="govuk-heading-m">Supervision</h2>

                <div class="govuk-form-group">
                    <h1 class="govuk-label-wrapper"><label class="govuk-label govuk-label--m" for="more-detail">
                            Action
                        </label>
                    </h1>

                    <textarea style="margin-bottom:10px" class="govuk-textarea govuk-!-width-three-quarters"
                              id="pakc-safety-action" name="pakc-safety-action" rows="4"
                              aria-describedby="pakc-safety-action">{{ data['pakc-safety-action'] }}</textarea>
                    <div id="pakc-safety-action" class="govuk-hint">
                        You have 200 characters remaining
                    </div>
                </div>


                <div class="govuk-form-group">
                    <h1 class="govuk-label-wrapper"><label class="govuk-label govuk-label--m" for="more-detail">
                            Timescale
                        </label>
                    </h1>

                    <textarea style="margin-bottom:10px" class="govuk-textarea govuk-!-width-three-quarters"
                              id="pakc-safety-timescale" name="pakc-safety-timescale" rows="4"
                              aria-describedby="pos-motivation-hint">{{ data['pakc-safety-timescale'] }}</textarea>
                    <div id="pos-motivation-hint" class="govuk-hint">
                        You have 200 characters remaining
                    </div>
                </div>

                <div class="govuk-form-group">
                    <h1 class="govuk-label-wrapper"><label class="govuk-label govuk-label--m" for="more-detail">
                            Responsibilities
                        </label>
                    </h1>

                    <textarea style="margin-bottom:10px" class="govuk-textarea govuk-!-width-three-quarters"
                              id="pakc-safety-resp" name="pakc-safety-resp" rows="4"
                              aria-describedby="pos-strengths-hint">{{ data['pakc-safety-resp'] }}</textarea>
                    <div id="pos-strengths-hint" class="govuk-hint">
                        You have 200 characters remaining
                    </div>
                </div>

                {{ govukButton({
                    text: "Save and continue"
                }) }}
                {{ govukButton({
                    classes: "govuk-button--secondary margin-left__50",
                    text: "Add another action"
                }) }}
            </form>
        </div>
    </div>

{% endblock %}
