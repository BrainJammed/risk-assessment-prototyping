                {% set qId = 'rc-registered' %}
                {{ govukCheckboxes({
                    idPrefix: qId,
                    name: qId,
                    fieldset: {
                        legend: {
                            text: "Registered with social services",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "currently",
                            text: "Currently"
                        },
                        {
                            value: "previously",
                            text: "Previously"
                        }
                    ]
                }) }}

                {% set qId = 'rc-category-cpr' %}
                {{ govukCheckboxes({
                    idPrefix: qId,
                    name: qId,
                    fieldset: {
                        legend: {
                            text: "Category of child protection registration",
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "neglect",
                            text: "Neglect",
                            conditional: {
                            html: cprPhysHtml
                        }
                        },
                        {
                            value: "physical",
                            text: "Physical",
                            conditional: {
                            html: cprPhysHtml
                        }
                        },
                        {
                            value: "sexual",
                            text: "Sexual",
                            conditional: {
                            html: cprPhysHtml
                        }
                        },
                        {
                            value: "emotional",
                            text: "Emotional",
                            conditional: {
                            html: cprPhysHtml
                        }
                        }
                    ]
                }) }}

                {% set qId = 'rc-reviews' %}
                {{ govukRadios({
                    classes: 'govuk-radios--inline',
                    idPrefix: qId,
                    name: qId,
                    fieldset: {
                        legend: {
                            text: "Have there been any child protection conferences or 'looked after' children reviews?",
                            isPageHeading: false,
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "yes",
                            text: "Yes",
                            conditional: {
                            html: reviewDetailHtml
                        }
                        },
                        {
                            value: "no",
                            text: "No"
                        },
                        {
                            value: "dont-know",
                            text: "Don't know"
                        }
                    ]
                }) }}


                {% set qId = 'rc-aware-date' %}
                {{ govukDateInput({
                    id: qId,
                    namePrefix: qId,
                    fieldset: {
                        legend: {
                            text: "Date assessor became aware of issues",
                            isPageHeading: false,
                            classes: "govuk-fieldset__legend--s"
                        }
                    }
                }) }}

                {% set qId = 'rc-imminent' %}
                {{ govukRadios({
                    idPrefix: qId,
                    name: qId,
                    fieldset: {
                        legend: {
                            text: "How imminent is the risk?",
                            isPageHeading: false,
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "days",
                            text: "Within days"
                        },
                        {
                            value: "weeks",
                            text: "Within weeks"
                        },
                        {
                            value: "months",
                            text: "Within months"
                        },
                        {
                            value: "longer",
                            text: "Longer"
                        }
                    ]
                }) }}

                {% set qId = 'rc-likely' %}
                {{ govukRadios({
                    idPrefix: qId,
                    name: qId,
                    fieldset: {
                        legend: {
                            text: "How likely is it?",
                            isPageHeading: false,
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "highly",
                            text: "Highly likely"
                        },
                        {
                            value: "quite",
                            text: "Quite likely"
                        },
                        {
                            value: "possible",
                            text: "Possible, but not very likely"
                        }
                    ]
                }) }}


                <div class="govuk-heading-m">Mitigating actions</div>
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--s" for="rc-mitigating-action">
                        Give details
                    </label>
                    <textarea class="govuk-textarea govuk-input--width-20 govuk-!-margin-bottom-0"
                              id="rc-mitigating-action" name="rc-mitigating-action" rows="2"></textarea>
                    <div class="govuk-hint" style="margin-top:10px">You have 200 characters remaining</div>
                </div>


                {% set qId = 'rc-past-concerns' %}
                {{ govukRadios({
                    classes: "govuk-radios--inline",
                    idPrefix: qId,
                    name: qId,
                    fieldset: {
                        legend: {
                            text: "Past concerns about suicide?",
                            isPageHeading: false,
                            classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "yes",
                            text: "Yes",
                            conditional: {
                            html: pastConcernDetailHtml
                        }
                        },
                        {
                            value: "no",
                            text: "No"
                        },
                        {
                            value: "dont-know",
                            text: "Don't know"
                        }
                    ]
                }) }}


                {{ govukButton({
                    text: "Save and continue"
                }) }}
